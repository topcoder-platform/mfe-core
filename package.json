{
  "name": "@topcoder/mfe-core",
  "scripts": {
    "start": "node server.js",
    "start-server": "sh start-server.sh",
    "start-client": "sh start-client.sh",
    "build": "webpack --mode=${APPMODE:-development} --env.APPENV=${APPENV:-dev} --env.SEGMENT_ANALYTICS_KEY=${SEGMENT_ANALYTICS_KEY:-NS}",
    "local-server": "nodemon ./server.js",
    "local-client": "webpack-dev-server --mode=development --port 8080 --env.APPENV=local",
    "lint": "eslint src --ext js",
    "test": "cross-env BABEL_ENV=test jest --passWithNoTests",
    "format": "prettier --write \"./**\""
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.7.4",
    "@babel/runtime": "^7.8.7",
    "@types/jest": "^25.2.1",
    "@types/systemjs": "^6.1.0",
    "axios": "^0.21.1",
    "babel-eslint": "^11.0.0-beta.2",
    "concurrently": "^5.1.0",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.7.2",
    "eslint-config-important-stuff": "^1.1.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "html-webpack-plugin": "^4.0.4",
    "jest": "^25.2.7",
    "jest-cli": "^25.2.7",
    "node-html-parser": "^2.0.0",
    "path": "^0.12.7",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "serve": "^11.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-config-single-spa": "^1.4.1",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "single-spa": "^5.3.1",
    "single-spa-layout": "1.0.0-beta.12",
    "nodemon": "^2.0.15"
  }
